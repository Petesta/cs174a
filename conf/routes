# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.CustomersController.newCustomer

POST    /customers                  controllers.CustomersController.createCustomer

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

## Print monthly summary of sales

# The amount of sales per product
GET     /manager/sales/product              controllers.ManagerController.getSalesPerProduct

# The amount of sales per category
GET     /manager/sales/category             controllers.ManagerController.getSalesPerCategory

# The customer who did the most purchase
GET     /manager/sales/customer             controllers.ManagerController.getSalesPerCustomer

# Customer status adjustment according to the sales in the month
PUT    /manager/customers/status/update     controllers.ManagerController.updateCustomerStatus

# Change the price of an item.
PUT    /manager/items/price/{amount}        controllers.ManagerController.setItemPrice